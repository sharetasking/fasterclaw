# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (generate with: openssl rand -hex 32)
API_JWT_SECRET=your-jwt-secret-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fasterclaw

# Encryption Key (generate with: openssl rand -hex 32)
# Required for encrypting sensitive data like Telegram bot tokens and OAuth tokens
ENCRYPTION_KEY=your-encryption-key-here

# OAuth Integrations (optional - for Skills & Integrations feature)
# Base URL for OAuth callbacks
OAUTH_REDIRECT_BASE_URL=http://localhost:3001

# Google OAuth (for Gmail, Calendar integrations)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Slack OAuth (for Slack integrations)
# Get credentials from: https://api.slack.com/apps
SLACK_OAUTH_CLIENT_ID=your-slack-client-id
SLACK_OAUTH_CLIENT_SECRET=your-slack-client-secret
# App-Level Token for Socket Mode (Settings → Basic Information → App-Level Tokens)
# Create token with "connections:write" scope - starts with "xapp-"
SLACK_APP_TOKEN=xapp-1-...
# GitHub OAuth (for GitHub integrations)
# Get credentials from: https://github.com/settings/developers
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_STARTER=price_xxx
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxx

# Instance Provider: "fly" (Fly.io - production) or "docker" (local development)
# Set to "docker" for local development without Fly.io costs
INSTANCE_PROVIDER=fly

# Fly.io (required if INSTANCE_PROVIDER=fly)
FLY_API_TOKEN=your-fly-api-token
FLY_ORG_SLUG=personal

# AI Provider Keys (injected into OpenClaw instances)
# At least one of these is required
OPENAI_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=AIza...

# Logging
LOG_LEVEL=info

# Ngrok (optional - for exposing local server to internet)
# Get your free static domain at https://dashboard.ngrok.com/cloud-edge/domains
NGROK_DOMAIN=your-subdomain.ngrok-free.dev
